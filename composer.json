{
    "name": "gokepelemo/custom-permalink-domain",
    "description": "WordPress plugin for custom permalink domain management",
    "type": "wordpress-plugin",
    "license": "GPL-2.0-or-later",
    "authors": [
        {
            "name": "Goke Pelemo",
            "email": "goke.pelemo@gmail.com"
        }
    ],
    "require": {
        "php": ">=7.4"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "mockery/mockery": "^1.4",
        "squizlabs/php_codesniffer": "^3.7",
        "phpmd/phpmd": "^2.13",
        "vimeo/psalm": "^4.30"
    },
    "autoload": {
        "psr-4": {
            "CustomPermalinkDomain\\": "includes/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "CustomPermalinkDomain\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "test:unit": "phpunit --testsuite=Unit",
        "test:integration": "phpunit --testsuite=Integration",
        "test:coverage": "phpunit --coverage-html tests/coverage",
        "cs:check": "phpcs --standard=WordPress includes/ custom-permalink-domain.php",
        "cs:fix": "phpcbf --standard=WordPress includes/ custom-permalink-domain.php",
        "analyze": "psalm",
        "quality": [
            "@cs:check",
            "@analyze",
            "@test"
        ]
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true
    }
}